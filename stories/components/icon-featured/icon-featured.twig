{% set font_size = "1.5em" %}

{% if icon_size_name == "small" %}
  {% set font_size = "1em" %}
{% elseif icon_size_name == "large" %}
  {% set font_size = "2em" %}
{% elseif icon_size_name == "x-large" %}
  {% set font_size = "2.5em" %}
{% endif %}

<div class="icon-featured icon-featured--{{ icon_featured_size }} rounded bg-{{ color_theme }} text-bg-{{ color_theme }} mb-3{% if icon_featured_classes|length > 0 %} {{ icon_featured_classes|join(' ') }}{% endif %}" style="
    font-size: {{ font_size }};
"
{% for attribute, value in attributes %} {{ attribute }}="{{ value }}"{% endfor %}>
    {% include "../icon/icon.twig" with {
        'icon_name': icon_name
    } %}
</div>
