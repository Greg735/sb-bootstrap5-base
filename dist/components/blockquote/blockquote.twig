<blockquote class="blockquote{% if blockquote_classes|length > 0 %} {{ blockquote_classes|join(' ') }}{% endif %}">
    {% if 'blockquote--quotted' in blockquote_classes %}
    <i class="bi bi-quote"></i>
    {% endif %}

    {{ blockquote_content }}
    
    {% if blockquote_footer %}
        <footer class="blockquote-footer">{{ blockquote_footer }}</footer>
    {% endif %}
</blockquote>
