{% set thumbnail = thumbnail ? 'img-thumbnail' : '' %}
{% set rounded = rounded ? 'rounded' : '' %}
{% set shadow = shadow ? 'shadow' : '' %}

{% set width = width|default('1920') %}
{% set height = height|default('1080') %}

<img 
  loading="lazy"
  src="{{ src }}"
  alt="{{ alt }}"
  title="{{ title }}"
  width="{{ width }}"
  height="{{ height }}"
  class="
  img-fluid
  {% if image_classes|length > 0 %} {{ image_classes|join(' ') }}{% endif %}
  {{ thumbnail }}
  {{ rounded }}
  {{ shadow }}
  "
  {% for attribute, value in image_attributes %}
    {{ attribute }}="{{ value }}"
  {% endfor %}
  />
