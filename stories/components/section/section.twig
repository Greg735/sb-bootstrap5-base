{# section.twig #}

{% set background_image = background_image ? ' style="background-image:url(\'' ~ background_image ~'\')" ' : null %}

<section class="{{ class }}" {{ background_image }}{% for attribute, value in section_attributes %} {{ attribute }}="{{ value }}"{% endfor %}>
{% if 'section--with-particles' in class %}
  <div class="particles">
    {% for i in 1..20 %}
      <span class="particle"></span>
    {% endfor %}
{% endif %}

  <div class="container">
  {% if heading %}
    <div class="row mb-3">
      <div class="col">
        {{ heading }}
      </div>
    </div>
  {% endif %}
    <div class="row">
      {{ content }}
    </div>
  </div>

{% if 'section--with-particles' in class %}
  </div>
{% endif %}

</section>
